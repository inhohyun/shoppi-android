<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.shoppi.shoppi.app.HoemFragment"
        android:label="HoemFragment" >
        <action
            android:id="@+id/action_home_to_product_detail"
            app:destination="@id/navigation_cart" />
    </fragment>
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.shoppi.shoppi.app.CategoryFragment"
        android:label="CategoryFragment" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.shoppi.shoppi.app.CartFragment"
        android:label="CartFragment" />
</navigation>